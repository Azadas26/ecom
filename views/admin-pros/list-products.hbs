<div class="container-fluid">
    <div class="row">
        <div style="text-align: center;">
            <a href="/admin/add-products" class="btn btn-success"> Add Products</a>
        </div>

        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">NO.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Type</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>

                {{#each products}}
                <tbody>
                    <td>{{@index}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.discription}}</td>
                    <td>{{this.type}}</td>
                    <td><img src="{{this.image}}" alt="" style="height: 65px; width: 65px;"></td>
                </tbody>
                {{/each}}

            </table>
        </div>
    </div>
</div>